<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="itemViewModel"
            type="com.badmask_zly.zirumockdemo.viewmodel.ItemContentRentOneVM" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="373dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="25dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            bind:imageUrl="@{itemViewModel.item().img}"
            bind:resizeHeight="@{itemViewModel.imageHeight}"
            bind:resizeWidth="@{itemViewModel.imageWidth}" />

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="2dp"
            android:gravity="center_horizontal"
            android:text="@{itemViewModel.item().title}"
            bind:resizeWidth="@{itemViewModel.textWidth}" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="2dp"
            android:text="@{itemViewModel.item().description}"
            bind:resizeWidth="@{itemViewModel.textWidth}" />

    </LinearLayout>

</layout>
